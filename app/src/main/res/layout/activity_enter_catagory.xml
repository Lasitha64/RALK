<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".EnterCatagory">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ralklogo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="244dp"
        android:layout_height="45dp"
        android:layout_marginStart="131dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="132dp"
        android:text="Enter the type"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <EditText
        android:id="@+id/ProductManagerAddItem_name_of_the_food"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Enter Name of the food item"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/update_image_new"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_new_view"
        app:layout_constraintVertical_bias="0.356" />

    <Button
    android:id="@+id/save_image_new"
    android:layout_width="113dp"
    android:layout_height="48dp"
    android:layout_marginEnd="28dp"
    android:text="Save"
    app:layout_constraintBottom_toBottomOf="@+id/update_image_new"
    app:layout_constraintEnd_toStartOf="@+id/update_image_new"
    app:layout_constraintTop_toTopOf="@+id/update_image_new"
    app:layout_constraintVertical_bias="0.0" />

<Button
    android:id="@+id/update_image_new"
    android:layout_width="110dp"
    android:layout_height="48dp"
    android:layout_marginBottom="60dp"
    android:text="Update"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

<Button
    android:id="@+id/delete_image_new"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="28dp"
    android:text="Delete"
    app:layout_constraintBottom_toBottomOf="@+id/update_image_new"
    app:layout_constraintStart_toEndOf="@+id/update_image_new"
    app:layout_constraintTop_toTopOf="@+id/update_image_new"
    app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/image_new_view"
        android:layout_width="269dp"
        android:layout_height="140dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/add_new_image" />

    <Button
        android:id="@+id/select_image_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select"
        app:layout_constraintBottom_toTopOf="@+id/update_image_new"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProductManagerAddItem_name_of_the_food" />

</androidx.constraintlayout.widget.ConstraintLayout>