<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="600dp"
        android:layout_height="800dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ralknew" />

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#ECD510"
        android:text="Sign Up"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView14"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp"
        />

    <Button

        android:id="@+id/btn_logcus"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="320dp"
        android:backgroundTint="#ECD510"
        android:text="Login as  customer"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_signup"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp" />

    <Button
        android:backgroundTint="#ECD510"
        android:id="@+id/btn_logAdmin"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:text="Login as  admin"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_logcus"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp"
        />

    <Button
        android:id="@+id/btn_logpm"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:text="Login as product manager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_logAdmin"
        android:textColor="@color/black"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp"
        android:backgroundTint="#ECD510"

        />

    <Button
        android:id="@+id/btn_logdp"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:text="Login as Delivery Manager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_logpm"
        android:textColor="@color/black"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp"
        android:backgroundTint="#ECD510"/>
</androidx.constraintlayout.widget.ConstraintLayout>